@using ShopOnline.Areas.Admin.Models
@model ProductModel

<div class="panel panel-primary">
    <div class="panel panel-heading">
        <h4>Thêm sản phẩm</h4>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("AddProduct", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.HiddenFor(x => x.Id)
            <div class="row">
                <div class="col-md-6 col-md-offset-1">
                    <div class="form-group has-success">
                        <label class="required">Tên Sản phẩm</label>
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Name, "", new { @class = "error-message" })
                    </div>

                    <div class="form-group has-success">
                        <label class="control-label" for="inputSuccess">Chọn hình</label>
                        <input type="file" name="file" id="file" accept="image/x-png,image/gif,image/jpeg">
                    </div>
                    <div class="form-group has-success">
                        <label class="required">Giá sản phẩm</label>
                        @Html.TextBoxFor(x => x.Price, new { @class = "form-control", min = "0", type = "number" })
                        @Html.ValidationMessageFor(x => x.Price, "", new { @class = "error-message" })
                    </div>
                    <div class="form-group has-success">
                        <label class="control-label" for="inputSuccess">Danh mục sản phẩm</label>
                        @Html.DropDownListFor(x => x.CategoryId, Model.Categories, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.CategoryId, "", new { @class = "error-message" })
                    </div>
                    <div class="form-group has-success">
                        <label class="required">Mô tả</label>
                        @Html.TextAreaFor(x => x.Descriptions, new { @class = "form-control", rows = "4" })
                        @Html.ValidationMessageFor(x => x.Descriptions, "", new { @class = "error-message" })
                    </div>
                    <div class="form-group has-success">
                        <label>Trạng thái</label>
                        @Html.CheckBoxFor(x => x.Status)
                    </div>
                    <div class="form-group has-success">
                        <input type="submit" value="Thêm" class="btn btn-primary">
                    </div>
                </div>
            </div>
        }
    </div>
</div>

